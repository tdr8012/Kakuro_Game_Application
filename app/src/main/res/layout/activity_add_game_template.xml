<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/intro_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Game Template"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/templateTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Puzzle Title"
            android:inputType="text"
            android:padding="16dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/templateDifficulty"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Difficulty (Easy, Medium, Hard)"
            android:inputType="text"
            android:padding="16dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/templateGrid"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Puzzle Grid (JSON or String Format)"
            android:gravity="top"
            android:padding="16dp"
            android:inputType="textMultiLine"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/saveTemplateBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save Template"
            android:background="@drawable/button_easy"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
