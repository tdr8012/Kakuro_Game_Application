<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background"
    android:forceDarkAllowed="false"
    tools:context=".PlayerDashboardActivity">

    <!-- Top Section (Subtitle) -->
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Dashboard"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Game Title -->
    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="KAKURO GAME"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:padding="10dp">

        <!-- Easy Button -->
        <Button
            android:id="@+id/easyBtn"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:text="EASY"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_easy"
            android:elevation="6dp"
            android:layout_marginBottom="12dp" />

        <!-- Medium Button -->
        <Button
            android:id="@+id/mediumBtn"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:text="MEDIUM ðŸŸ¡"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_medium"
            android:elevation="6dp"
            android:layout_marginBottom="12dp" />

        <!-- Hard Button -->
        <Button
            android:id="@+id/hardBtn"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:text="HARD ðŸ”´"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_hard"
            android:elevation="6dp"
            android:layout_marginBottom="12dp" />

        <!-- Scoreboard Button -->
        <Button
            android:id="@+id/scoreboardBtn"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:text="SCOREBOARD ðŸ†"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_scoreboard"
            android:elevation="6dp"
            android:layout_marginBottom="12dp" />

        <!-- Profile Button -->
        <Button
            android:id="@+id/profileBtn"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:text="PROFILE ðŸ‘¤"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_profile"
            android:elevation="6dp"
            android:layout_marginBottom="12dp" />
    </LinearLayout>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:text="LOG OUT ðŸšª"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_logout"
        android:elevation="6dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true" />

    <!-- Help Button (Bottom Right Corner) -->
    <Button
        android:id="@+id/gameRuleBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="?"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rule_tutorial_button"
        android:elevation="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:padding="8dp"/>
</RelativeLayout>
