<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Dashboard"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/gameTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KAKURO GAME"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/easyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EASY"
            style="@style/LevelButton" />

        <Button
            android:id="@+id/mediumBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEDIUM 🟡"
            style="@style/LevelButton" />

        <Button
            android:id="@+id/hardBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HARD 🔴"
            style="@style/LevelButton" />

        <Button
            android:id="@+id/challengeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHALLENGE MODE 🔥"
            style="@style/LevelButton" />

        <Button
            android:id="@+id/scoreboardBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCOREBOARD 🏆"
            style="@style/LevelButton" />

        <Button
            android:id="@+id/profileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROFILE 👤"
            style="@style/LevelButton" />

        <!-- ✅ Added missing buttons -->
        <Button
            android:id="@+id/gameRuleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GAME RULES 📘"
            style="@style/LevelButton" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGOUT 🔓"
            style="@style/LevelButton" />

    </LinearLayout>
</ScrollView>
