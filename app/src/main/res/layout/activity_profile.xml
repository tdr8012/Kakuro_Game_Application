<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playerProfileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA">

    <!-- Title -->
    <TextView
        android:id="@+id/playerProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/kakuro_game_icon"
        android:layout_marginBottom="16dp" />

    <!-- Player Name -->
    <TextView
        android:id="@+id/playerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- Player Email -->
    <TextView
        android:id="@+id/playerEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />
    <!-- Player Email -->
    <TextView
        android:id="@+id/playerPhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- Player Score -->
    <TextView
        android:id="@+id/playerScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Return Button -->
    <Button
        android:id="@+id/returnToDashboardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Player Dashboard" />
</LinearLayout>
